@{
    var Cart = Session["Cart"] as _24dh112968_MyStore_lap1.Models.ViewModle.Cart;

    ViewBag.pmmodel = new _24dh112968_MyStore_lap1.Models.ViewModle.PersonalMenuVM
    {
        IsLoggedIn = User?.Identity?.IsAuthenticated ?? false,
        UserName = User?.Identity?.IsAuthenticated == true ? User.Identity.Name : string.Empty,
        CartCount = (Cart != null && Cart.Items.Any()) ? Cart.Items.Count() : 0
    };
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyStore</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    

</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">

            <!-- LOGO / ẢNH -->
            <a href="@Url.Action("Index", "Home")" class="navbar-brand d-flex align-items-center">
                <!-- Bạn thay img này bằng logo của bạn -->
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTvmkPMoh8jTq91vbCTJIfQyOyEvftFn6JyZg&s" alt="Logo" style="height:40px;" />
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="bi bi-house"></i> Trang chủ
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person"></i>

                            @if (ViewBag.pmmodel.IsLoggedIn)
                            {
                                @ViewBag.pmmodel.UserName <!-- Hiện tên người dùng -->
                            }
                            else
                            {
                                @:Tài khoản
                            }
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            @if (ViewBag.pmmodel.IsLoggedIn)
                            {
                                <li><a class="dropdown-item" href="@Url.Action("ProfileInfo", "Account")">Trang cá nhân</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" href="@Url.Action("Login", "Account")">Đăng nhập</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Register", "Account")">Đăng ký</a></li>
                            }
                        </ul>
                    </li>


                    <li class="nav-item position-relative">
                        <a class="nav-link" href="@Url.Action("Index", "Cart")">
                            <i class="bi bi-cart"></i> Giỏ hàng

                            @if (ViewBag.pmmodel.CartCount > 0)
                            {
                                <span class="badge bg-danger rounded-pill ms-1">
                                    @ViewBag.pmmodel.CartCount
                                </span>
                            }
                        </a>
                    </li>

                </ul>
            </div>

        </div>
    </nav>

    <div class="container body-content pt-3">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted">
            <p>&copy; @DateTime.Now.Year - MyStore</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    <style>
        /* Căn chỉnh dropdown trong navbar */
        .navbar .dropdown-menu {
            background-color: #343a40; /* Màu nền tối */
            border: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            min-width: 160px;
        }

            /* Màu chữ trong dropdown */
            .navbar .dropdown-menu .dropdown-item {
                color: #f8f9fa;
                padding: 10px 15px;
            }

                /* Hover mượt */
                .navbar .dropdown-menu .dropdown-item:hover {
                    background-color: #495057;
                    color: white;
                }

        /* Tên tài khoản trên navbar */
        .navbar .nav-link {
            color: #f8f9fa !important;
            font-weight: 500;
        }

            /* Hiệu ứng khi hover */
            .navbar .nav-link:hover {
                color: #ffc107 !important;
            }

        /* Dropdown-toggle dấu mũi tên */
        .navbar .dropdown-toggle::after {
            margin-left: 6px;
            vertical-align: middle;
        }

        /* Bo góc */
        .navbar .dropdown-menu {
            border-radius: 8px;
        }
    </style>
</body>
</html>
