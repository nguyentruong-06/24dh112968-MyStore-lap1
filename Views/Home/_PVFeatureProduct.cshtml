@model _24dh112968_MyStore_lap1.Models.ViewModle.HomeProductVM

<link rel="stylesheet" type="text/css" href="~/Content/CustomerHome.css" />

@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <section class="container-fluid featureProd">
        <h2>Sản phẩm nổi bật</h2>
        <div class="feature-container">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="product-item">
                    <div  style="width: 100%; height: 350px; object-fit: cover; border-radius: 10px;">
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                            <img src="@Url.Content(product.ProductImage)" alt="@product.ProductName" />
                        </a>
                    </div>
                    <div>
                        <p class="prodPrice">@product.ProductPrice.ToString("N0") ₫</p>
                        <p class="prodName">@product.ProductName</p>
                        <p class="prodCate">@product.Category.CategoryName</p>
                        <p class="prodSale">
                            Đã bán: &nbsp; @(product.OrderDetails?.Count() ?? 0)
                        </p>
                    </div>
                </div>
            }
        </div>
    </section>
    <hr />
}
