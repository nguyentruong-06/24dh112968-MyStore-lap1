@model _24dh112968_MyStore_lap1.Models.ViewModle.ProductDetailsVM
@using PagedList.Mvc

<link rel="stylesheet" type="text/css" href="~/Content/MyStyle/CustomerHome.css" />

@if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
{
    <section class="container-fluid featureProd">
        <h4 style="font-weight:bold;">Sản phẩm tương tự</h4>
        <ul class="feature-container" style="list-style-type: none; padding-left: 0;">
            @foreach (var product in Model.RelatedProducts)
            {
                <li class="fProduct-item">
                    <div>
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                            <img src="@Html.DisplayFor(modelItem => product.ProductImage)" />
                        </a>
                    </div>
                    <div>
                        <h5>@Html.DisplayFor(modelItem => product.ProductName)</h5>
                        <p class="prodSale">@Html.DisplayFor(modelItem => product.ProductPrice)</p>
                    </div>
                </li>
            }
        </ul>
    </section>

    // Lưu ý: Đoạn code phân trang PagedListPager có thể đã bị cắt
    // nhưng nếu cần, nó sẽ được đặt ở đây, tương tự như trong _PVTopProduct.cshtml
  
}
