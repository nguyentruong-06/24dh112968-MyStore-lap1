@model _24dh112968_MyStore_lap1.Models.ViewModle.HomeProductVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Customer Home Page";
    <link rel="stylesheet" type="text/css" href="~/Content/CustomerHome.css" />
}

@* PHẦN BANNER *@
<section class="container-fluid banner">
    <img src="https://cdn2.cellphones.com.vn/insecure/rs:fill:595:100/q:100/plain/https://dashboard.cellphones.com.vn/storage/dfgbfhgj.png"
         class="img-fluid w-100"  alt="banner" />

    
</section>


@* PHẦN TÌM KIẾM SẢN PHẨM *@
<section class="container-fluid searchProd">
    <h2>Tìm kiếm sản phẩm</h2>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <div class="form-group search-container">
            @Html.TextBoxFor(m => m.SearchTerm, new
            {
                @class = "search-input",
                placeholder = "Nhập tên, mô tả hoặc chủng loại sản phẩm"
            })
            <button type="submit" class="search-button">Tìm kiếm</button>
        </div>
    }
</section>

<hr />

@* PHẦN SẢN PHẨM NỔI BẬT *@
@Html.Partial("_PVFeatureProduct", Model)

@* PHẦN SẢN PHẨM MỚI *@
@Html.Partial("_PVNewProduct", Model)
