@model _24dh112968_MyStore_lap1.Models.Order

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4 text-success"><i class="fas fa-check-circle"></i> Đặt hàng thành công!</h2>

    <div class="mb-4">
        <h4>Thông tin đơn hàng</h4>
        <p><strong>Mã đơn hàng:</strong> @Model.OrderID</p>
        <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Trạng thái thanh toán:</strong> @Model.PaymentStatus</p>
        <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
        <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
        <p><strong>Phương thức giao hàng:</strong> @Model.DeliveryMethod</p>
    </div>

    <div class="mb-4">
        <h4>Danh sách sản phẩm</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hình</th>
                    <th>Sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.OrderDetails)
                {
                    <tr>
                        <td>
                            <img src="@detail.Product.ProductImage" alt="@detail.Product.ProductName" width="80" />
                        </td>
                        <td>@detail.Product.ProductName</td>
                        <td>@detail.UnitPrice.ToString("N0") đ</td>
                        <td>@detail.Quantity</td>
                        <td>@detail.TotalPrice đ</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end mt-3">
        <h4>Tổng đơn hàng: <span class="text-danger">@Model.TotalAmount.ToString("N0") đ</span></h4>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="fas fa-home"></i> Tiếp tục mua sắm
        </a>
    </div>
</div>
