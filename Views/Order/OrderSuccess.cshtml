@model _24dh112968_MyStore_lap1.Models.ViewModle.Order

@{
    ViewBag.Title = "OrderSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-success">XÁC NHẬN ĐƠN HÀNG</h2>
<hr />

<h3>Thông tin đơn hàng</h3>
<div>
    <p><strong>Mã đơn hàng:</strong> @Model.OrderID</p>
    <p><strong>Ngày đặt hàng:</strong> @Model.OrderDate</p>
    <p><strong>Tổng số tiền:</strong> @Model.TotalAmount</p>
    <p><strong>Trạng thái thanh toán:</strong> @Model.PaymentStatus</p>
    <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
    <p><strong>Phương thức giao hàng:</strong> @Model.ShippingMethod</p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
</div>

<h3>Chi tiết đơn hàng</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Tổng giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetail)
        {
            <tr>
                @* Giả định Product.ProductName đã được load qua OrderDetails *@
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@item.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>

@* Code bổ sung: Thêm nút quay về trang chủ hoặc xem lịch sử đơn hàng *
    <div class="mt-4">
        @Html.ActionLink("Quay về trang chủ", "Index", "Home", null, new { @class = "btn btn-primary" })
        @* Có thể thêm link xem lịch sử đơn hàng ở đây nếu có *@
</div>