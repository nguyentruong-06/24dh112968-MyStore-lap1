@model _24dh112968_MyStore_lap1.Models.ViewModle.RegisterVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .Accountbtn {
        width: 275px;
        height: 40px;
        border: 1px solid #888888;
        margin: 5px;
        align-items: center;
    }
</style>

<div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger", style = "font-size:16px;" })
        <div class="form-group">
            <h2 class="col-md-6" style="text-align:center;">Đăng nhập</h2>
        </div>

        @* Tên đăng nhập *@
        <div class="form-group">
            @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
        </div>

        @* Mật khẩu *@
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        @* Nút Gửi và Link Đăng ký *@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Đăng nhập" class="btn btn-info Accountbtn" />
                <br />
                <p>
                    Bạn Chưa Có Tài Khoản? <a href="@Url.Action("Register", "Account", null)">Đăng ký ngay</a>
                </p>
            </div>
        </div>
    }
</div>

