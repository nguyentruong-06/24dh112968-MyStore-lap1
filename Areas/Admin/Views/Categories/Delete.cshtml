@model _24dh112968_MyStore_lap1.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<style>
    /* Tùy chỉnh nhẹ cho giao diện */
    h2.bg-success {
        font-size: 2rem;
        font-weight: 700;
        padding: 12px 16px;
        border-radius: 6px;
    }

    .alert-danger {
        font-size: 1.1rem;
        font-weight: 500;
    }

    label.col-form-label {
        font-weight: 600;
        font-size: 1rem;
    }

    .btn {
        padding: 8px 20px;
        font-size: 1rem;
        border-radius: 6px;
    }

    .form-horizontal {
        margin-top: 20px;
    }

    .form-control-plaintext {
        font-size: 1.1rem;
        font-weight: 500;
        color: #333;
    }
</style>
<div class="container mt-4">

    <h2 class="bg-success text-dark p-3 rounded">XÓA DANH MỤC</h2>

    <div class="alert alert-danger mt-3">
        Bạn thực sự muốn xóa danh mục này à?
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal mt-4">
            <div class="form-group row">
                <label class="col-md-2 col-form-label fw-bold">Tên danh mục</label>
                <div class="col-md-10 d-flex align-items-center">
                    <span class="form-control-plaintext">@Html.DisplayFor(model => model.CategoryName)</span>
                </div>
            </div>

            <div class="form-group row mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xóa" class="btn btn-primary me-2" />
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>
