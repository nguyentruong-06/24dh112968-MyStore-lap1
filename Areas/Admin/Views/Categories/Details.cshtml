@model _24dh112968_MyStore_lap1.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="bg-success p-3 rounded">THÔNG TIN CHI TIẾT DANH MỤC</h2>

    <div class="details-card mt-3">
        <div class="row mb-3">
            <div class="col-md-3 details-label">Tên danh mục:</div>
            <div class="col-md-9 details-value">
                @Html.DisplayFor(model => model.CategoryName)
            </div>
        </div>
    </div>

    <div class="mt-4">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
