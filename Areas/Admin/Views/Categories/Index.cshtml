@model IEnumerable<_24dh112968_MyStore_lap1.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="bg-success p-3 rounded">DANH SÁCH DANH MỤC</h2>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>TÊN DANH MỤC</th>
                <th class="text-center" style="width: 220px;">HÀNH ĐỘNG</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td class="text-center">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm me-1" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-info btn-sm me-1" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success mt-2" })
    </p>
</div>
