@model _24dh112968_MyStore_lap1.Models.Product

@{
    ViewBag.Title = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="bg-primary text-white p-3 rounded">CẬP NHẬT SẢN PHẨM</h2>

    @using (Html.BeginForm("Edit", "Products", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ProductID)

        <div class="form-horizontal mt-3">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Danh mục -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.CategoryID, "Danh mục", htmlAttributes: new { @class = "col-md-2 col-form-label fw-bold" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Tên sản phẩm -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.ProductName, "Tên sản phẩm", htmlAttributes: new { @class = "col-md-2 col-form-label fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sản phẩm" } })
                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Mô tả -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.ProductDescription, "Mô tả", htmlAttributes: new { @class = "col-md-2 col-form-label fw-bold" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control", rows = 4, placeholder = "Nhập mô tả sản phẩm" })
                    @Html.ValidationMessageFor(model => model.ProductDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Đơn giá -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.ProductPrice, "Đơn giá", htmlAttributes: new { @class = "col-md-2 col-form-label fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductPrice, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập giá sản phẩm" } })
                    @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Link ảnh -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.ProductImage, "Link ảnh (URL)", htmlAttributes: new { @class = "col-md-2 col-form-label fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductImage, new { htmlAttributes = new { @class = "form-control", placeholder = "Dán link ảnh sản phẩm" } })
                    @Html.ValidationMessageFor(model => model.ProductImage, "", new { @class = "text-danger" })

                    <!-- Hiển thị ảnh hiện tại -->
                    @if (!string.IsNullOrEmpty(Model.ProductImage))
                    {
                        <div class="mt-3">
                            <label class="fw-bold text-muted">Ảnh hiện tại:</label><br />
                            <img src="@Model.ProductImage"
                                 alt="Ảnh sản phẩm"
                                 class="border rounded"
                                 style="width:200px; height:auto;" />
                        </div>
                    }
                </div>
            </div>

            <!-- Nút lưu -->
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-success me-2" />
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
